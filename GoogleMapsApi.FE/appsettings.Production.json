{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "GoogleMapsApi": "Information",
      "WebSpark.HttpClientUtility": "Information"
    }
  },
  "AllowedHosts": "*",
  "CsvOutputFolder": "c:\\websites\\WebSpark\\CsvOutput",

  // Enhanced HttpRequestResultPollyOptions with Azure best practices
  "HttpRequestResultPollyOptions": {
    "MaxRetryAttempts": 3,
    "RetryDelaySeconds": 1,
    "CircuitBreakerThreshold": 5,
    "CircuitBreakerDurationSeconds": 30,
    "TimeoutSeconds": 30
  },

  // Google Maps API Configuration
  "GoogleMapsApi": {
    "BaseUrl": "https://maps.googleapis.com",
    "DefaultTimeout": "00:00:30",
    "MaxConcurrentRequests": 10,
    "EnableRequestLogging": true,
    "EnablePerformanceLogging": true
  },

  // Security and Performance settings
  "Security": {
    "RequireHttps": true,
    "EnableApiKeyValidation": true
  },

  // Monitoring and observability
  "ApplicationInsights": {
    "InstrumentationKey": "",
    "EnableDependencyTracking": true,
    "EnableRequestTracking": true,
    "EnablePerformanceCounters": true
  },

  // Cache configuration for better performance
  "Cache": {
    "DefaultExpiration": "00:05:00",
    "EnableResponseCaching": true,
    "MaxCacheSize": "100MB"
  }
}
